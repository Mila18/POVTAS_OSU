@model IEnumerable<POVTAS_OSU.Models.TechnicalFacility>

@{
    ViewBag.Title = "Index";
}

<h2>Техническое оснащение</h2>

<p>
    @Html.ActionLink("Добавить", "Create")
</p>
<table class="table table-hover">
    <tr style="background-color: #7abfff;">
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Configuration)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Classroom.Number)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td class="table-light">
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td class="table-light">
            @Html.DisplayFor(modelItem => item.Configuration)
        </td>
        <td class="table-light">
            @Html.DisplayFor(modelItem => item.Classroom.Number)
        </td>
        <td class="table-light">
            @Html.ActionLink("Редактировать", "Edit", new { id = item.Id }) |

            @Html.ActionLink("Удалить", "Delete", new { id = item.Id })
        </td>
    </tr>
}

</table>
