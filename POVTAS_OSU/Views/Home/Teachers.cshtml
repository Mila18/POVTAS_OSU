@model IEnumerable<POVTAS_OSU.Models.ChairConsist>

@using POVTAS_OSU.Models

@{
    ViewBag.Title = "ChairConsist";
    List<Position> position = ViewBag.Positions;
    List<SupportStaff> supportStaffs = ViewBag.SupportStaffs;
}

<style>
    .ourTeam h2 {
        margin: 0 0 20px 0;
    }

    .ourTeam .i {
        margin-top: 30px;
    }

        .ourTeam .i .c {
            background: rgba(220, 220, 220, 0.2);
            -webkit-box-shadow: 0 4px 0 #7abfff;
            -moz-box-shadow: 0 4px 0 #7abfff;
            box-shadow: 0 4px 0 #7abfff;
            -webkit-border-radius: 5px;
            -moz-border-radius: 5px;
            border-radius: 5px;
            -moz-background-clip: padding;
            -webkit-background-clip: padding-box;
            background-clip: padding-box;
            position: relative;
            overflow: hidden;
            padding-bottom: 110px;
        }

            .ourTeam .i .c .wrap {
                position: relative;
            }

                .ourTeam .i .c .wrap img {
                    width: 100%;
                    -webkit-border-top-left-radius: 5px;
                    -webkit-border-top-right-radius: 5px;
                    -moz-border-radius-topleft: 5px;
                    -moz-border-radius-topright: 5px;
                    border-top-left-radius: 5px;
                    border-top-right-radius: 5px;
                    -webkit-transition: all .3s ease;
                    -moz-transition: all .3s ease;
                    -ms-transition: all .3s ease;
                    -o-transition: all .3s ease;
                }

                .ourTeam .i .c .wrap .info {
                    padding: 15px 0;
                    position: absolute;
                    top: 100%;
                    width: 100%;
                    -webkit-transition: all .3s ease;
                    -moz-transition: all .3s ease;
                    -ms-transition: all .3s ease;
                    -o-transition: all .3s ease;
                }

                    .ourTeam .i .c .wrap .info .name {
                        margin: 0;
                        font-size: 18px;
                        font-weight: 700;
                        margin: 0 0 8px 0;
                    }

                    .ourTeam .i .c .wrap .info .position {
                        margin: 0;
                        font-size: 14px;
                        color: #555659;
                    }

            .ourTeam .i .c .more {
                position: absolute;
                bottom: -20%;
                width: 100%;
                -webkit-transition: all .3s ease;
                -moz-transition: all .3s ease;
                -ms-transition: all .3s ease;
                -o-transition: all .3s ease;
            }

                .ourTeam .i .c .more p {
                    margin: 0 18px 30px 18px;
                    line-height: 22px;
                }

                .ourTeam .i .c .more .socials {
                    margin: 0 0 20px 0;
                }




            .ourTeam .i .c:hover .info {
                display: none;
            }

            .ourTeam .i .c:hover .more {
                bottom: 0;
            }
</style>

<div class="container-lg">
    <div class="section ourTeam">
        <header class="text-center">
            <h2>Преподаватели кафедры </h2>
        </header>
        <div class="row d-flex justify-content-center">
            @foreach (var item in Model)
            {
                <div class="col-xs-6 col-sm-4 col-md-3 i" style="min-width:300px; min-height:470px;">
                    <div class="c text-center">
                        <div class="wrap">

                            <img src="@item.Photo" alt="Image" style="min-width:300px; min-height:390px;">

                            <div class="info">
                                <h3 class="name text-black">@Html.DisplayFor(modelItem => item.Surname) @Html.DisplayFor(modelItem => item.Name) @Html.DisplayFor(modelItem => item.PatronymicName)</h3>
                                <h4 class="position text-black">@Html.DisplayFor(modelItem => item.Position.Title), <span class="text-lowercase">@Html.DisplayFor(modelItem => item.AcademicDegree.Title)</span> </h4>
                            </div>
                        </div>
                        <div class="more text-black">

                            <div class="socials">
                                <button type="button" class="btn btn-lg" style="background-color: #7abfff;"><a style="color:white;" href="../ChairConsists/Details/@item.Id">Подробнее</a></button>
                            </div>

                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>


<div class="container-lg">
    <div class="section ourTeam">
        <header class="text-center mt-5">
            <h2>Учебно-вспомогательный персонал кафедры</h2>
        </header>
        <div class="row d-flex justify-content-center">
            @foreach (var item in supportStaffs)
            {
                <div class="col-xs-6 col-sm-4 col-md-3 i" style="min-width:300px; min-height:470px;">
                    <div class="c text-center">
                        <div class="wrap">

                            <img src="@item.Photo" alt="Image" style="min-width:300px; min-height:390px;">

                            <div class="info">
                                <h3 class="name text-black">@Html.DisplayFor(modelItem => item.Surname) @Html.DisplayFor(modelItem => item.Name) @Html.DisplayFor(modelItem => item.PatronymicName)</h3>
                                <h4 class="position text-black">@Html.DisplayFor(modelItem => item.Position.Title) </h4>
                            </div>
                        </div>
                        <div class="more text-black">

                            <div class="socials">
                                <button type="button" class="btn btn-lg" style="background-color: #7abfff;"><a style="color:white;" href="../SupportStaffs/Details/@item.Id">Подробнее</a></button>
                            </div>

                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
