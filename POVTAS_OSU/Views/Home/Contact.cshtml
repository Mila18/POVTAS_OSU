@model IEnumerable<POVTAS_OSU.Models.Contact>

@{
    ViewBag.Title = "Contact";
}

<div id="contacts" class="mt-5">
    <div class="row mb-4">
        <div class="col-4">
            <i class="bi bi-geo-alt-fill" style="font-size: 2rem; color:#4f4f4f;"></i>
            Адрес
        </div>
        <div class="col-4">
            <i class="bi bi-telephone-inbound-fill" style="font-size: 2rem; color: #4f4f4f; "></i>
            Телефон
        </div>
        <div class="col-4">
            <i class="bi bi-envelope-fill" style="font-size: 2rem; color: #4f4f4f; "></i>
            E-mail
        </div>
    </div>
    <div class="row mb-5">
        @foreach (var item in Model)
        {
            <div class="col-4">
                @Html.DisplayFor(modelItem => item.Address)
            </div>
            <div class="col-4">
                @Html.DisplayFor(modelItem => item.Phone)
            </div>
            <div class="col-4">
                <a href="mailto:@Html.DisplayFor(modelItem => item.Email)">@Html.DisplayFor(modelItem => item.Email)</a>
            </div>
        }
    </div>
</div>



