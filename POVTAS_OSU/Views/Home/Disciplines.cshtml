@model IEnumerable<POVTAS_OSU.Models.Discipline>
@using POVTAS_OSU.Models


@{
    ViewBag.Title = "Disciplines";
    int Id = Convert.ToInt32(ViewBag.Id);
    List<EducationField> educationFields = ViewBag.EducationFields;
}


<h2>Дисциплины кафедры</h2>

<style>
    .option{
        border-radius:10px;
        outline:none;
    }
</style>

@using (Html.BeginForm("Disciplines", "Home", FormMethod.Post))
{
    <div class="form-group">
        <div class="container-fluid mb-2 mb-1">
            <div >
                <select class="form-select form-select-lg mb-3 " aria-label=".form-select-lg example" name="Id">
                    <option disabled @if (Id == 0) {@Html.Raw("selected");} value="0" name="Id" class="option">Выберите направление подготовки</option>
                    @foreach (var item in educationFields)
                    {
                        <option name="Id" @if (Id == item.Id) { @Html.Raw("selected"); } value="@item.Id"> @Html.DisplayFor(modelItem => item.Title)</option>
                    }
                </select>
            </div>
            <div><button type="submit" class="btn btn-lg btn-outline-light">Выбрать</button></div>
        </div>
    </div>

}

<table class="table table-hover">

    <tr style="background-color: #7abfff; ">
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EducationField.Title)
        </th>
        
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td class="table-light text-start pl-5">
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td class="table-light">
                @Html.DisplayFor(modelItem => item.EducationField.Title)
            </td>
        </tr>
    }

</table>

