@model IEnumerable<POVTAS_OSU.Models.CalendarOfEvent>

@{
    ViewBag.Title = "Index";
}

<h2>Календарь мероприятий</h2>

<p>
    @Html.ActionLink("Добавить", "Create")
</p>
<table class="table table-hover">
    <tr style="background-color: #7abfff;">

        @*<th>
            @Html.DisplayNameFor(model => model.Id)
        </th>*@
        <th>
            @Html.DisplayNameFor(model => model.Event)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ReportFile)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>

    @*<td>
            @Html.DisplayFor(modelItem => item.Id)
        </td>*@
    <td class="table-light">
        @Html.DisplayFor(modelItem => item.Event)
    </td>
    <td class="table-light">
        @Html.DisplayFor(modelItem => item.Date)
    </td>
    <td class="table-light">
        <a href="@item.ReportFile">Скачать</a>
    </td>
    <td class="table-light">
        @Html.ActionLink("Редактирование", "Edit", new { id = item.Id }) |
        @*@Html.ActionLink("Подробнее", "Details", new { id = item.Id }) |*@
        @Html.ActionLink("Удалить", "Delete", new { id = item.Id })
    </td>
</tr>
}

</table>
