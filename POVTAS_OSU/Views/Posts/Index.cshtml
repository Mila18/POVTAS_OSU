@model IEnumerable<POVTAS_OSU.Models.Post>

@{
    ViewBag.Title = "Index";
}

<h2>Новости</h2>

<p>
    @Html.ActionLink("Добавить", "Create")
</p>
<table class="table table-hover">
    <tr style="background-color: #7abfff;">
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NewsType.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Photo)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.File)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td class="table-light">
        @Html.DisplayFor(modelItem => item.Title)
    </td>
    <td class="table-light">
        @Html.DisplayFor(modelItem => item.Description)
    </td>
    <td class="table-light">
        @Html.DisplayFor(modelItem => item.Date)
    </td>
    <td class="table-light">
        @Html.DisplayFor(modelItem => item.NewsType.Title)
    </td>
    <td class="table-light">
        <img src="@item.Photo" width="130vw" height="100vh" />
    </td>
    <td class="table-light">
        <a href="@item.File">Скачать</a>
    </td>
    <td class="table-light">
        @Html.ActionLink("Редактировать", "Edit", new { id = item.Id }) |
        @Html.ActionLink("Подробнее", "Details", new { id = item.Id }) |
        @Html.ActionLink("Удалить", "Delete", new { id = item.Id })
    </td>
</tr>
}

</table>
